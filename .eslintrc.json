{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "quotes" : ["warn", "double"],
        "no-restricted-syntax" : ["off", "ForOfStatement"],
        "no-plusplus" : "off",
        "no-console" : "off",
        "no-undef" : "off",
        "@typescript-eslint/no-unsafe-argument" : "error",
        "@typescript-eslint/no-explicit-any" : "error"
    }
}
